<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_poster_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/detail_title_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@id/detail_poster_film"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gambar_detail_tanggal"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_today_white_48dp"
            android:layout_toRightOf="@id/detail_poster_film"
            android:tint="@color/colorAccent"
            android:layout_below="@id/detail_title_film"
            android:layout_marginTop="3dp"
            android:layout_marginRight="4dp"/>

        <TextView
            android:id="@+id/detail_release_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toRightOf="@id/gambar_detail_tanggal"
            android:layout_below="@id/detail_title_film"
            android:text="release"/>

        <ImageView
            android:id="@+id/gambar_jam_film"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_alarm_black_24dp"
            android:layout_toRightOf="@id/detail_poster_film"
            android:layout_below="@id/gambar_detail_tanggal"
            android:layout_marginRight="4dp"
            android:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/detail_duration_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="duration"
            android:layout_toRightOf="@id/gambar_detail_tanggal"
            android:layout_below="@id/detail_release_film"/>

        <ImageView
            android:id="@+id/gambar_rating_film"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_grade_white_48dp"
            android:layout_toRightOf="@+id/detail_poster_film"
            android:layout_below="@id/gambar_jam_film"
            android:layout_marginRight="4dp"
            android:tint="@color/colorAccent"/>
        <TextView
            android:id="@+id/detail_rating_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rating"
            android:layout_toRightOf="@id/gambar_rating_film"
            android:layout_below="@id/detail_duration_film"/>

        <Button
            android:id="@+id/btn_trailer_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trailer"
            android:background="@color/colorAccent"
            android:textColor="@color/cardview_light_background"
            android:layout_toRightOf="@id/detail_poster_film"
            android:layout_below="@id/gambar_rating_film"
            android:foreground="?android:selectableItemBackground"
            android:layout_marginTop="47dp"
            android:onClick="btnThriller"
            />
        <Button
            android:id="@+id/btn_web_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Official web"
            android:background="@color/colorAccent"
            android:textColor="@color/cardview_light_background"
            android:layout_toRightOf="@id/btn_trailer_film"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:foreground="?android:selectableItemBackground"
            android:layout_alignBaseline="@id/btn_trailer_film"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/detail_tagline_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/detail_overview_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp" />

</LinearLayout>