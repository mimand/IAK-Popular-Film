<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_favorit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="2dp"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:selectableItemBackground"
        >
        <ImageView
            android:id="@+id/favorit_gambar"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="120dp"/>
        <TextView
            android:id="@+id/favorit_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:text="2016-10-12"/>
        <TextView
            android:id="@+id/favorit_judul"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/favorit_gambar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="sdsddsdsddsd999999999999999999999d"/>

        <TextView
            android:id="@+id/favorit_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/favorit_gambar"
            android:layout_below="@id/favorit_judul"
            android:text="dsdsds"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>

